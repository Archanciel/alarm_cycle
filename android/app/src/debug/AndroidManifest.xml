<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The INTERNET permission is required for development.
         Specifically, the Flutter tool needs it to communicate with
         the running application to allow setting breakpoints, to
         provide hot reload, etc.
    -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- rescheduleOnReboot: A boolean parameter of the
         AndroidAlarmManager.periodic() function. When set to true,
         the alarm will be rescheduled after the device reboots. The
         next permission is required to enable this parameter to work !
    -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO"/>

    <!-- For apps with targetSDK=31 (Android 12) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
</manifest>
